<div class="errors">
</div>

  <div class="row">
    <div class="twelve columns text-center"><br />

      <h2> All Soccer Pitches </h2>
      <div class="main">

      <div class="main_page">

      <button class="button large">Use My Current Location</button>
      <br>
      <hr>
        <%= form_tag "/pitches/coordinate_conversion", method: :post do %>
        <%= text_field_tag "address", nil, placeholder:"Address" %>
        <%= text_field_tag "city", nil, placeholder:"City" %>
        <%= text_field_tag "state", nil, placeholder:"State" %>
        <%= text_field_tag "zip", nil, placeholder:"Zip Code" %>
        <%= submit_tag "Find Pitch", class:"success button" %>
      <% end %>

      <p id="location"></p>
      </div>
    </div>
  </div>
</div>

<div class="map-container"></div>

<div class="directions-container"></div>

<div class="streetview-container"></div>